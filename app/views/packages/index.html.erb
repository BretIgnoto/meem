<script>
	var app = angular.module('meems', ['ngRoute']);
	app.config(function($routeProvider) {
	    $routeProvider
	        .when("/silver", {
	            templateUrl: "partials/silver.html"
	        })
	        .when("/gold", {
	            templateUrl: "partials/gold.html"
	        })
	        .when("/platinum", {
	            templateUrl: "partials/platinum.html"
	        })
	})
</script>
<div ng-app="meems">
    <h1>Package Options</h1>
    <div id="packages">
    	<a href="#/silver">Silver</a> | <a href="#/gold">Gold</a> | <a href="#/platinum">Platinum</a>
    </div>
    <div ng-view>
    </div>
</div>