<form action="/users/<%=@user.id%>" method="post">
  <%= token_tag nil %>
  <input type="hidden" name="_method" value="patch">
  <label>First Name:</label>
  <input type="text" name="user[first_name]" value="<%=@user.first_name%>">
  <label>Last Name:</label>
  <input type="text" name="user[last_name]" value="<%=@user.last_name%>">
  <label>Email:</label>
  <input type="text" name="user[email]" value="<%=@user.email%>">
  <label>Package:</label><%=session[:package]%>
  <label>Price:</label><%=session[:price]%>
  <input type="submit" value="Edit Profile">
</form>

<%= form_tag charges_path do %>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount="<%=session[:price].to_i * 100%>"
          data-locale="auto"
          data-zip-code="true"
          data-allow-remember-me="false"
          data-email="<%=@user.email%>">
          </script>
<% end %>