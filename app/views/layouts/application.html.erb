<!DOCTYPE html>
<html>
<head>
	<title>Meem</title>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular.min.js" %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular-route.min.js" %>
	<%= csrf_meta_tags %>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">

	<!-- Optional theme -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css" integrity="sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r" crossorigin="anonymous">

	<!-- Latest compiled and minified JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
	<style>
		body {
			background-color: #01BFFE;

		}
		h1 {
			color: #FEFEFE;
			font-family: Verdana, Geneva, sans-serif;
			text-align: center;
			align-content: 200px;
			font-size:72px;
			padding: 5px;
		}
		h2 {
			color: #FEFEFE;
			font-family: Verdana, Geneva, sans-serif;
			text-align: center;
		}
		p {
			color: #FEFEFE;
			font-family: Verdana, Geneva, sans-serif;
		}
		h3 {
			color: #FEFEFE;
			font-family: Verdana, Geneva, sans-serif;
			display: block;
			position: relative;
			top: 500px;
		}
		form {
			color: #FEFEFE;
			font-family: Verdana, Geneva, sans-serif;
		}
		.carousel-inner > .item > img,
		.carousel-inner > .item > a > img{
			width: 50%;
			margin: auto;
		}

		.go_to_packages_button {
			background-color:#fff;
			color:#01BFFE;
			font-family:'Helvetica Neue',sans-serif;
			font-size:18px;
			line-height:30px;
			/*border-radius:20px;
			-webkit-border-radius:20px;
			-moz-border-radius:20px;
			border:0;*/
			text-shadow:#C17C3A 0 -1px 0;
			width:250px;
			height:80px;
			position: relative;


		}


		.styled-button-1 {
			background-color:#fff;
			color:#01BFFE;
			font-family:'Helvetica Neue',sans-serif;
			font-size:18px;
			line-height:30px;
			border-radius:20px;
			-webkit-border-radius:20px;
			-moz-border-radius:20px;
			border:0;
			text-shadow:#C17C3A 0 -1px 0;
			width:120px;
			height:32px;
			align-self: center;
		}
		.login_form {
			width: 300px;
			height: 200px;
			border: 5px solid white;
			padding: 5px;
			margin: 5px;

		}
	</style>
</head>
<body>

<% if flash[:errors] %>
	<% flash[:errors].each do |f| %>
		<p><%= f %></p>
	<% end %>
<% end %>

<% if current_user %>
	<form action='/users' method='post'>
		<%= token_tag nil %>
		<input type='hidden' name='_method' value='delete'>
		<input type='submit' value='Log Out'>
	</form>
<% end %>

<%= yield %>

</body>
</html>
