<!DOCTYPE html>
<html>
<head>
	<title>Meem</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular.min.js" %>
    <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular-route.min.js" %>
	<%= csrf_meta_tags %>
	<style type="text/css">
	body {
		background-color: #01BFFE;

	}

	li {
		color: white;
	}

	p {
		color: white;
	}

	h1 {
		text-align: center;
		color: white;

	}
	h2 {
		text-align: center;
		color: white;
	}
	h3 {
		color: white;
	}

	.login_page {
		border: 1px solid white;
		width: 200px;

	}

	.gold_feature {
		border: 1 px solid white;
		width: 300px;
		height: 300px;
		text-align: center;

	}
	.silver_feature {
		border: 1 px solid white;
		width: 300px;
		height: 300px;
		text-align: center;
		
	}
	.platinum_feature {
		border: 1 px solid white;
		width: 300px;
		height: 300px;
		text-align: center;
		
	}
	#packages {
		text-align: center;
	}
	</style>

</head>
<body>
	

<% if flash[:errors] %>
	<% flash[:errors].each do |f| %>
		<p><%= f %></p>
	<% end %>	
<% end %>

<% if current_user %>
	<form action='/users' method='post'>
		<%= token_tag nil %>
		<input type='hidden' name='_method' value='delete'>
		<input type='submit' value='Log Out'>
	</form>
<% end %>

<%= yield %>

</body>
</html>
